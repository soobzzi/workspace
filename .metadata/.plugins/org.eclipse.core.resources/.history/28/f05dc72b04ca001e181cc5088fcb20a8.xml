	<!-- 논리적 이름 ApplicationScopeTest  URL Pattern 지정 -->
   <servlet-mapping>
		<servlet-name>ApplicationScopeTest</servlet-name>
		<url-pattern>/ApplicationScopeTest</url-pattern>
	</servlet-mapping>
